{
    "$jsonSchema": {
      "bsonType": "object",
      "required": ["email", "isActive"],
      "properties": {
        "email": {
          "bsonType": "string",
          "description": "must be a string and is required",
          "minLength": 1,
          "maxLength": 254,
          "pattern": "^.+@.+\\..+$"
        },
        "isActive": {
          "bsonType": "bool",
          "description": "must be a boolean and is required"
        }
      }
    }
  }
  